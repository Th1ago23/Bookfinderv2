@model Bookfinder.Models.Review

@{
    ViewData["Title"] = "Adicionar Resenha";
}

<h1>Adicionar Resenha</h1>

<form asp-action="AddReview" method="post">
    <input type="hidden" asp-for="BookId" value="@ViewBag.BookId" />
    <div class="form-group">
        <label for="Content">Conteúdo da Resenha</label>
        <textarea asp-for="Content" class="form-control" rows="5" required></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Adicionar Resenha</button>
</form>

<h3>Resenhas já adicionadas:</h3>
<div class="row">
    @foreach (var review in ViewBag.Reviews)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <!-- Conteúdo principal da resenha com destaque -->
                    <p class="card-text" style="font-size: 1.1em; font-weight: 500;">@review.Content</p>

                    <!-- Linha divisória para separar o conteúdo principal das informações secundárias -->
                    <hr class="my-2">

                    <!-- Informações secundárias (ID da resenha e data) alinhadas horizontalmente e com estilo discreto -->
                    <div class="d-flex justify-content-between text-muted" style="font-size: 0.85em;">
                        <p class="mb-0">Resenha ID: @review.BookId</p>
                        <p class="mb-0">Criada em: @review.CreatedAt</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>